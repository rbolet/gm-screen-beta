{
  "name": "gm-screen",
  "version": "0.3.0",
  "description": "*This project is stable and functional, but still in early stages of development*",
  "main": "webpack.config.js",
  "scripts": {
    "start": "node server/index.js",
    "build": "webpack --mode=production",
    "dev": "npm-run-all --silent --parallel dev:*",
    "dev:client": "webpack-dev-server",
    "dev:server": "nodemon server/index.js",
    "watch": "webpack --watch --mode=development"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "bootstrap": "4.4.1",
    "express": "^4.17.3",
    "express-session": "1.17.0",
    "immer": "5.3.2",
    "multer": "^1.4.2",
    "mysql2": "2.0.1",
    "react": "16.12.0",
    "react-bootstrap": "1.0.0-beta.16",
    "react-dom": "16.12.0",
    "session-file-store": "1.4.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "7.7.4",
    "@babel/plugin-transform-react-jsx": "7.7.4",
    "babel-eslint": "10.0.3",
    "babel-loader": "8.0.6",
    "css-loader": "^3.4.2",
    "eslint": "6.7.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.16.0",
    "eslint-plugin-standard": "4.0.1",
    "husky": "3.1.0",
    "lint-staged": "9.4.3",
    "mini-css-extract-plugin": "^0.9.0",
    "nodemon": "^2.0.1",
    "npm-run-all": "4.1.5",
    "style-loader": "^1.1.3",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "3.9.0"
  },
  "nodemonConfig": {
    "watch": [
      "server/"
    ],
    "ignore": [
      "server/public/",
      "server/sessions/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintIgnore": [
    "server/public/main.js"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "babel-eslint",
    "extends": [
      "plugin:react/recommended",
      "eslint:recommended",
      "standard"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "padded-blocks": 0,
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "curly": [
        "error",
        "multi-line"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ],
      "react/prop-types": 0
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rbolet/gm-screen-v0.3.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rbolet/gm-screen-v0.3/issues"
  },
  "homepage": "https://github.com/rbolet/gm-screen-v0.3#readme"
}
